@page "/admin/products"
@model do_an_ltweb.Admin.AdProduct.IndexModel
@{
    ViewData["Title"] = "List Product";
}
<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<div class="mb-2">
    <a class="btn btn-secondary" asp-page="./Create">Create New Product</a>
</div>
<div class="card mb-4">

    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DataTable Product
    </div>
    <div class="card-body">
        <table id="datatablesSimple">

            <thead>
                <tr>
                    <th>ProductImage</th>
                    <th>ProductName</th>
                    <th>Price</th>
                    <th>Nums</th>
                    <th>Tasks</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>ProductImage</th>
                    <th>ProductName</th>
                    <th>Price</th>
                    <th>Nums</th>
                    <th>Tasks</th>
                </tr>
            </tfoot>

            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td><img style="max-width: 100px; max-height: 100px;" src="@product.ImageUrl"/></td>
                        <td>@product.NameProduct</td>
                        <td>@product.Price.ToString("N0")đ</td>
                        <td>@product.Nums</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-productid="@product.IdProduct">Update</a>
                            <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-productid="@product.IdProduct">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
