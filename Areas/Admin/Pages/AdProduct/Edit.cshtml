@page "/admin/product/edit-product/{productid}"
@model do_an_ltweb.Admin.AdProduct.EidtModel

@{
    ViewData["Title"] = "Update Product";
}

<h2>@ViewData["Title"]</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name" class="control-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Price" class="control-label"></label>
                <input asp-for="Input.Price" class="form-control" />
                <span asp-validation-for="Input.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nums" class="control-label"></label>
                <input asp-for="Input.Nums" class="form-control" />
                <span asp-validation-for="Input.Nums" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Description" class="control-label"></label>
                <textarea asp-for="Input.Description" class="form-control"></textarea>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

            <div class="form-group">

                @*Thêm input hidden để lưu ExistingImageUrl*@
                <input type="hidden" asp-for="Input.ExistingImageUrl" />
                @if (!string.IsNullOrEmpty(Model.Input.ExistingImageUrl))
                {
                    <!-- Hiển thị ảnh cũ nếu không có ảnh mới -->
                    <img id="existingImage" src="@Model.Input.ExistingImageUrl" alt="Existing Image" style="max-width: 100%;" />
                }

                <img id="imagePreview" src="#" alt="Preview Image" style="display: none; margin-top: 10px; max-width: 100%;" />


                <label asp-for="Input.ImageUrl" class="control-label">Image</label>
                <input asp-for="Input.ImageUrl" type="file" class="form-control" onchange="previewImage(this)" />
                <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>


            </div>

            <!-- Edit Remove background Image -->

            <div class="form-group">

                @*Thêm input hidden để lưu ExistingImageUrl*@
                <input type="hidden" asp-for="Input.ExistingBRImageUrl" />
                @if (!string.IsNullOrEmpty(Model.Input.ExistingBRImageUrl))
                {
                    <!-- Hiển thị ảnh cũ nếu không có ảnh mới -->
                    <img id="ExistingBRImageUrl" src="@Model.Input.ExistingBRImageUrl" alt="Existing Image" style="max-width: 100%;" />
                }

                <img id="BRImagePreview" src="#" alt="Preview Image" style="display: none; margin-top: 10px; max-width: 100%;" />

                <label asp-for="Input.BRImageUrl" class="control-label">BackgroundRemoveImage</label>
                <input asp-for="Input.BRImageUrl" type="file" class="form-control" onchange="previewBRImage(this)" />
                <span asp-validation-for="Input.BRImageUrl" class="text-danger"></span>





            </div>


            <div class="form-group">
                <label asp-for="Input.Size" class="control-label"></label>
                <input asp-for="Input.Size" class="form-control" />
                <span asp-validation-for="Input.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryBrandId" class="control-label"></label>
                <select asp-for="Input.CategoryBrandId" class="form-control">
                    <option value="">-- Select a Category Brand --</option>
                    @if (Model.CategoryBrands != null)
                    {
                        @foreach (var brand in Model.CategoryBrands)
                        {
                            <option value="@brand.IdCategory">@brand.NameCategory</option>
                        }
                    }
                </select>
                <span asp-validation-for="Input.CategoryBrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryFrameColorId" class="control-label"></label>
                <select asp-for="Input.CategoryFrameColorId" class="form-control">
                    <option value="">-- Select a Category Frame Color --</option>
                    @if (Model.CategoryFrameColors != null)
                    {
                        @foreach (var brand in Model.CategoryFrameColors)
                        {
                            <option value="@brand.IdCategory">@brand.NameCategory</option>
                        }
                    }
                </select>
                <span asp-validation-for="Input.CategoryFrameColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryFrameStyleId" class="control-label"></label>
                <select asp-for="Input.CategoryFrameStyleId" class="form-control">
                    <option value="">-- Select a Category Frame Style --</option>
                    @if (Model.CategoryFrameStyles != null)
                    {
                        @foreach (var brand in Model.CategoryFrameStyles)
                        {
                            <option value="@brand.IdCategory">@brand.NameCategory</option>
                        }
                    }
                </select>
                <span asp-validation-for="Input.CategoryFrameStyleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryIrisColorId" class="control-label"></label>
                <select asp-for="Input.CategoryIrisColorId" class="form-control">
                    <option value="">-- Select a Category Iris Color --</option>
                    @if (Model.CategoryIrisColors != null)
                    {
                        @foreach (var brand in Model.CategoryIrisColors)
                        {
                            <option value="@brand.IdCategory">@brand.NameCategory</option>
                        }
                    }
                </select>
                <span asp-validation-for="Input.CategoryIrisColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryMaterialId" class="control-label"></label>
                <select asp-for="Input.CategoryMaterialId" class="form-control">
                    <option value="">-- Select a Category Material --</option>
                    @if (Model.CategoryMaterials != null)
                    {
                        @foreach (var brand in Model.CategoryMaterials)
                        {
                            <option value="@brand.IdCategory">@brand.NameCategory</option>
                        }
                    }
                </select>
                <span asp-validation-for="Input.CategoryMaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategoryOriginId" class="control-label"></label>
                <select asp-for="Input.CategoryOriginId" class="form-control">
                    <option value="">-- Select a Category Origin --</option>
                    @if (Model.CategoryOrigins != null)
                    {
                        @foreach (var brand in Model.CategoryOrigins)
                        {
                            <option value="@brand.IdCategory">@brand.NameCategory</option>
                        }
                    }
                </select>
                <span asp-validation-for="Input.CategoryOriginId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CategorySexId" class="control-label"></label>
                <select asp-for="Input.CategorySexId" class="form-control">
                    <option value="">-- Select a Category Sex --</option>
                    @if (Model.CategorySexes != null)
                    {
                        @foreach (var brand in Model.CategorySexes)
                        {
                            <option value="@brand.IdCategory">@brand.NameCategory</option>
                        }
                    }
                </select>
                <span asp-validation-for="Input.CategorySexId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Hide" class="control-label"></label>
                <select asp-for="Input.Hide" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                </select>
                <span asp-validation-for="Input.Hide" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
                <a class="btn btn-primary" asp-page="./Index">Return</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>function previewImage(input) {
        var imagePreview = document.getElementById('imagePreview');
        var file = input.files[0];
        var reader = new FileReader();
        // Ẩn ảnh cũ nếu có
        var existingImage = document.getElementById('existingImage');
        if (existingImage) {
            existingImage.style.display = 'none';
        }
        reader.onload = function (e) {
            imagePreview.src = e.target.result;
            imagePreview.style.display = 'block'; // Hiển thị hình ảnh xem trước
        }
        if (file) {
            reader.readAsDataURL(file); // Đọc dữ liệu ảnh dưới dạng URL
        } else {
            imagePreview.style.display = 'none'; // Ẩn hình ảnh xem trước nếu không có ảnh được chọn
        }
    }

    function previewBRImage(input) {
        console.log('previewBRImage is loaded');
        // Lấy phần tử img để hiển thị ảnh xem trước
        var BRImagePreview = document.getElementById('BRImagePreview');
        // Kiểm tra nếu có file được chọn
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            // Ẩn ảnh BackgroundRemoveImage cũ nếu có
            var existingBRImage = document.getElementById('ExistingBRImageUrl');
            if (existingBRImage) {
                existingBRImage.style.display = 'none';
            }
            // Xử lý khi file được load xong
            reader.onload = function (e) {
                BRImagePreview.src = e.target.result; // Gán URL ảnh vào thẻ img
                BRImagePreview.style.display = 'block'; // Hiển thị ảnh xem trước
            };
            // Đọc dữ liệu file dưới dạng URL
            reader.readAsDataURL(input.files[0]);
        } else {
            // Ẩn ảnh xem trước nếu không có file được chọn
            BRImagePreview.style.display = 'none';
        }
    }</script>