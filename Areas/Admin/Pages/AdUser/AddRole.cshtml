@page "/admin/assign-user-role/{id}"
@model do_an_ltweb.Admin.AdUser.AddRoleModel
@{
    ViewData["Title"] = "Set role";
}

<h2>Set role for user: @Model.user.UserName</h2>

@{
    
   
}
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleNames"></label>
                @Html.ListBoxFor(m => m.RoleNames, @Model.allRoles, new {
                    id = "id-select-roles",
                    @class = "w-100"
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Update</button>
            <a class="btn btn-primary" asp-page="./Index">Return</a>
        </form>
        <hr>
    </div>
</div>


@section Scripts {

    <script src="/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="/lib/multiple-select/multiple-select.min.css" />

    <script>
        $("#id-select-roles").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}